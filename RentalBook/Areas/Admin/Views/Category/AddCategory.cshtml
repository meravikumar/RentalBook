@model RentalBook.Models.Models.Category
@{
    ViewData["Title"] = "AddCategory";
    Html.RenderPartial("_SideBar");
}

<div class="new-container row justify-content-center">
    <div class="col-6">
        <div class="p-3 mt-4 row">
            <h2><b>Add Category</b></h2>
            <hr />
            <form asp-action="AddCategory" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-light">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

