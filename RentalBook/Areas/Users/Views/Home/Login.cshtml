@model RentalBook.Models.Authentication.Login

<form method="post">
    <div class="row justify-content-center" style="margin-top:70px">
        <div class="col-4">
            <div class="bg-dark rounded-2 p-3 mt-5 row">
                <h2>Login</h2>
                <hr />
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group mb-2">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="me-sm-1 btn btn-primary">Login</button>
                    <a asp-action="ForgotPassword" class="btn btn-warning">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
